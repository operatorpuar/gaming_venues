---
import type { BusinessResult } from '../lib/types';
import OptimizedImage from './OptimizedImage.astro';

interface Props {
  business: BusinessResult;
  priority?: boolean;
  class?: string;
}

const { business, priority = false, class: className = '' } = Astro.props;

// Format address for display
const displayAddress = business.city && business.state 
  ? `${business.city}, ${business.state}` 
  : business.full_address;

// Fallback image if business image is not available
const businessImage = business.image_url || '/placeholder-business.svg';

// Generate star rating
const stars = Array.from({ length: 5 }, (_, i) => {
  const starValue = i + 1;
  const isFilled = starValue <= business.rating;
  const isHalf = !isFilled && starValue - 0.5 <= business.rating;
  return {
    filled: isFilled || isHalf,
    index: i
  };
});
---

<article class={`card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 ${className}`}>
  <!-- Featured badge overlay -->
  {business.featured && (
    <div class="absolute top-3 left-3 z-10">
      <div class="badge badge-secondary badge-lg font-semibold shadow-lg">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
        </svg>
        Featured
      </div>
    </div>
  )}
  
  <!-- Business image -->
  <figure class="relative aspect-card overflow-hidden">
    <OptimizedImage
      src={businessImage}
      alt={business.name}
      width={400}
      height={300}
      class="aspect-card hover:scale-105 transition-transform duration-300"
      priority={priority}
      sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 25vw"
    />
  </figure>
  
  <!-- Card content -->
  <div class="card-body p-4 sm:p-6">
    <!-- Business name and verification badge -->
    <h2 class="card-title text-lg sm:text-xl font-bold line-clamp-2 mb-2">
      <span class="flex-1">{business.name}</span>
      {business.verified && (
        <div class="badge badge-primary gap-1 flex-shrink-0 ml-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <span class="hidden sm:inline">Verified</span>
        </div>
      )}
    </h2>
    
    <!-- Rating and reviews -->
    <div class="flex items-center gap-2 mb-3">
      <div class="flex items-center gap-1" role="img" aria-label={`Rating: ${business.rating} out of 5 stars`}>
        <!-- Star rating display -->
        {stars.map(star => (
          <svg 
            class={`w-4 h-4 ${star.filled ? 'text-yellow-400' : 'text-gray-300'}`}
            fill="currentColor" 
            viewBox="0 0 20 20"
            aria-hidden="true"
          >
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
        ))}
      </div>
      
      <span class="text-sm text-base-content/70 truncate">
        {business.rating.toFixed(1)} ({business.reviews_count.toLocaleString()})
      </span>
    </div>
    
    <!-- Business type -->
    {business.business_type && (
      <div class="mb-2">
        <div class="badge badge-outline badge-sm">{business.business_type}</div>
      </div>
    )}
    
    <!-- Address -->
    <div class="flex items-start gap-2 mb-3 text-sm text-base-content/70">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
      </svg>
      <span class="line-clamp-2 leading-relaxed">{displayAddress}</span>
    </div>
    
    <!-- Description (truncated) -->
    {business.description && (
      <p class="text-sm text-base-content/80 line-clamp-3 mb-4 leading-relaxed">
        {business.description.length > 120 
          ? business.description.substring(0, 120) + '...' 
          : business.description
        }
      </p>
    )}
    
    <!-- Categories -->
    {business.categories && business.categories.length > 0 && (
      <div class="flex flex-wrap gap-1 mb-4">
        {business.categories.slice(0, 2).map(category => (
          <div class="badge badge-ghost badge-sm">{category.name}</div>
        ))}
        {business.categories.length > 2 && (
          <div class="badge badge-ghost badge-sm">+{business.categories.length - 2}</div>
        )}
      </div>
    )}
    
    <!-- Action buttons -->
    <div class="card-actions justify-between items-center mt-auto pt-2">
      <div class="flex gap-2">
        {business.website && (
          <a 
            href={business.website} 
            target="_blank" 
            rel="noopener noreferrer"
            class="btn btn-outline btn-sm"
            aria-label={`Visit ${business.name} website`}
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 sm:mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
            <span class="hidden sm:inline">Website</span>
          </a>
        )}
      </div>
      
      <a 
        href={`/business/${business.slug}`} 
        class="btn btn-primary btn-sm"
        aria-label={`View details for ${business.name}`}
      >
        <span class="hidden sm:inline">View Details</span>
        <span class="sm:hidden">Details</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
  </div>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  /* Enhanced hover effects */
  .card:hover {
    transform: translateY(-4px);
  }
  
  /* Focus styles for accessibility */
  .card:focus-within {
    outline: 2px solid hsl(var(--p));
    outline-offset: 2px;
  }
  
  /* Touch-friendly sizing for mobile */
  @media (max-width: 640px) {
    .card-body {
      padding: 1rem;
    }
    
    .btn {
      min-height: 2.5rem;
    }
  }
  
  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .card {
      border: 2px solid currentColor;
    }
  }
  
  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .card {
      transition: none;
    }
    
    .card:hover {
      transform: none;
    }
  }
</style>