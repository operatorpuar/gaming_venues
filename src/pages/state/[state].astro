---
import Layout from '../../layouts/Layout.astro';
import { databaseService } from '../../lib/database';
import { generateBreadcrumbStructuredData } from '../../lib/seo';

// Get the state from the URL
const { state } = Astro.params;

if (!state) {
  return Astro.redirect('/regions');
}

// Convert URL slug back to state name (e.g., "new-south-wales" -> "New South Wales")
const stateName = state.split('-').map(word => 
  word.charAt(0).toUpperCase() + word.slice(1)
).join(' ');

// Fetch regions for this state with business counts
const regionsWithCounts = await databaseService.getRegionsByState(stateName);

// If no regions found, redirect to regions page
if (regionsWithCounts.length === 0) {
  return Astro.redirect('/regions');
}

// Calculate totals
const totalBusinesses = regionsWithCounts.reduce((sum, region) => sum + region.business_count, 0);

// Generate breadcrumb structured data
const breadcrumbs = [
  { name: 'Home', url: '/' },
  { name: 'Regions', url: '/regions' },
  { name: stateName, url: `/state/${state}` }
];

const breadcrumbStructuredData = generateBreadcrumbStructuredData(breadcrumbs);

// SEO metadata
const title = `Gaming Venues in ${stateName} - Regional Directory`;
const description = `Discover ${totalBusinesses} gaming venues across ${regionsWithCounts.length} regions in ${stateName}. Find casinos, gaming halls, and entertainment venues by region.`;
const canonical = `/state/${state}`;

const structuredData = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": title,
  "description": description,
  "url": canonical,
  "breadcrumb": breadcrumbStructuredData,
  "about": {
    "@type": "State",
    "name": stateName
  },
  "mainEntity": {
    "@type": "ItemList",
    "numberOfItems": regionsWithCounts.length,
    "itemListElement": regionsWithCounts.map((region, index) => ({
      "@type": "ListItem",
      "position": index + 1,
      "name": region.name,
      "url": `/region/${region.slug}`,
      "description": `${region.business_count} venues`
    }))
  }
};
---

<Layout
  title={title}
  description={description}
  canonical={canonical}
  structuredData={structuredData}
>
  <main class="min-h-screen bg-base-200">
    <!-- Header Section -->
    <div class="bg-base-100 shadow-sm">
      <div class="container mx-auto px-4 py-8">
        <div class="text-center">
          <h1 class="text-3xl md:text-4xl font-bold text-base-content mb-4">
            Gaming Venues in {stateName}
          </h1>
          <p class="text-lg text-base-content/70 max-w-2xl mx-auto">
            Discover {totalBusinesses.toLocaleString()} gaming venues across {regionsWithCounts.length} regions in {stateName}.
          </p>
        </div>
        
        <!-- Stats -->
        <div class="flex justify-center mt-6">
          <div class="stats shadow">
            <div class="stat">
              <div class="stat-title">State</div>
              <div class="stat-value text-primary">{stateName}</div>
              <div class="stat-desc">Geographic area</div>
            </div>
            <div class="stat">
              <div class="stat-title">Regions</div>
              <div class="stat-value">{regionsWithCounts.length}</div>
              <div class="stat-desc">Local areas</div>
            </div>
            <div class="stat">
              <div class="stat-title">Total Venues</div>
              <div class="stat-value">{totalBusinesses.toLocaleString()}</div>
              <div class="stat-desc">In this state</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Breadcrumbs -->
    <div class="container mx-auto px-4 py-4">
      <div class="breadcrumbs text-sm">
        <ul>
          <li><a href="/" class="link link-hover">Home</a></li>
          <li><a href="/regions" class="link link-hover">Regions</a></li>
          <li>{stateName}</li>
        </ul>
      </div>
    </div>

    <!-- Regions Grid -->
    <div class="container mx-auto px-4 py-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        {regionsWithCounts.map(region => (
          <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow duration-300">
            <div class="card-body">
              <h2 class="card-title text-xl font-bold">
                {region.name}
              </h2>
              
              <div class="flex items-center gap-2 mb-4">
                <div class="badge badge-primary badge-lg">
                  {region.business_count.toLocaleString()} venues
                </div>
              </div>
              
              <p class="text-base-content/70 mb-4">
                Explore {region.business_count} gaming venues and gambling establishments in {region.name}, {region.state}.
              </p>
              
              <div class="card-actions justify-end">
                <a 
                  href={`/region/${region.slug}`} 
                  class="btn btn-primary"
                >
                  Browse {region.name}
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-base-100 mt-12">
      <div class="container mx-auto px-4 py-8">
        <div class="text-center mb-6">
          <h2 class="text-2xl font-bold text-base-content">Explore More</h2>
          <p class="text-base-content/70">Find venues by categories or amenities</p>
        </div>
        
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/regions" class="btn btn-outline">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            All States
          </a>
          
          <a href="/categories" class="btn btn-outline">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
            Browse Categories
          </a>
          
          <a href="/amenities" class="btn btn-outline">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
            </svg>
            Browse Amenities
          </a>
          
          <a href="/businesses" class="btn btn-outline">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            Search All Venues
          </a>
        </div>
      </div>
    </div>
  </main>
</Layout>